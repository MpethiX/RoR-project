<% if @article.errors.any? %>
<h2>Errors</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li> <%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>
<table><tr>
    <td><%= f.label :title %> <br/>
<%= f.text_field :title %></td>
<td>    <%= f.label :description %> <br/>
    <%= f.text_area :description %></td>

</tr></table>


<p>
    <%= f.submit %>
</p>

<% end %>

<%= link_to "Back to articles listing", articles_path %>