<%= render 'shared/errors', obj: @article %>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :Titel %> 
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Titel", autofocus: true %>
                    </div>
                    </div>
                    <div class="form-group">
            <div class="control-label col-sm-2">
           <%= f.label :Beschreibung %>
           </div>
           <div class="col-sm-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Textfeld" %>
            </div>
        </div>
        <div class="form-group">
            <div class= "row">
                <div class="col-sm-offset-2 col-sm-8">
                    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2"></div>
            <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
        </div>
        
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Abbrechen und zurück zur Übersicht", articles_path %> ]
        </div>
    </div>
</div>