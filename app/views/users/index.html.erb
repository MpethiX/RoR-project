<h1 align="center"> Ãœbersicht Benutzer</h1>
    <% @users.each do |user| %>
    <%= will_paginate %>
     <ul class="listing">
         <div class="row">
             <div class="well col-md-4 col-md-offset-4">
                 <li><%= link_to gravatar_for(user), user_path(user) %></li>
                 <li class="article-title">
                     <%= link_to user.username, user_path(user) %>
                 </li>
                 <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                 <% if logged_in? and current_user.admin? %>
                     <li> <%= link_to "Delete this user", user_path(user), method: :delete, data: { confir: "Are you sure you want to delte the user and all their articles?" } %></li>
                     <% end %>
             </div>
         </div>
     </ul>
     <%= will_paginate %>
<% end %>